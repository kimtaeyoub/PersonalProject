<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1">

	<VBox spacing="30" alignment="CENTER">

		<padding>
			<Insets top="10" bottom="10" left="10" right="10" />
		</padding>
		<HBox spacing="10" alignment="CENTER">
			<Label text="현재 재고량 : " />
			<TextField fx:id="txtCurrentCount" />
		</HBox>

		<HBox spacing="10" alignment="CENTER">
			<Label text="판매 할 물품 수량 : " />
			<TextField fx:id="txtSalesCount" promptText="판매할 수량을 적어주세요" />
		</HBox>

		<HBox spacing="50" alignment="CENTER">
			<Button text="판매대기 등록" fx:id="btnSalesCountOK" />
			<Button text="취 소" fx:id="btnSalesCountExit" />
		</HBox>

	</VBox>

</AnchorPane>

