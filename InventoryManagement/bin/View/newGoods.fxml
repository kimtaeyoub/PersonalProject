<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.ValueAxis?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="500"
	prefHeight="200">
	<!-- TODO Add Nodes -->

	<HBox spacing="20">
		<padding>
			<Insets top="10" left="10" bottom="10" right="10" />
		</padding>

		<VBox spacing="100">

			<VBox spacing="20">

				<padding>
					<Insets top="50" />
				</padding>

				<HBox spacing="10">

					<Label text="  품번  :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsPnum" prefWidth="180"
						prefHeight="30" promptText="상품번호" />

				</HBox>

				<HBox spacing="10">

					<Label text="  품명  :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsPname" prefWidth="180"
						prefHeight="30" promptText="상품명" />

				</HBox>

				<HBox spacing="10">

					<Label text="  품종  :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsPkind" prefWidth="180"
						prefHeight="30" promptText="상품종류" />

				</HBox>



				<HBox spacing="10">

					<Label text="사이즈 :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsSize" prefWidth="180"
						prefHeight="30" promptText="사이즈" />

				</HBox>

				<HBox spacing="10">

					<Label text="  컬러  :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsColor" prefWidth="180"
						prefHeight="30" promptText="컬러" />

				</HBox>

				<HBox spacing="10">

					<Label text="  단가  :">
						<font>
							<Font size="20" />
						</font>
					</Label>
					<TextField fx:id="txtNewGoodsPrice" prefWidth="180"
						prefHeight="30" promptText="개당상품가격" />

				</HBox>

			</VBox>

			<HBox spacing="30" alignment="CENTER">

				<Button fx:id="btnNewGoodsOk" text="등 록" prefWidth="100"
					prefHeight="25">
					<font>
						<Font size="20" />
					</font>
				</Button>
				<Button fx:id="btnNewGoodsExit" text="종 료" prefWidth="100"
					prefHeight="25">
					<font>
						<Font size="20" />
					</font>
				</Button>

			</HBox>

		</VBox>

		<VBox alignment="CENTER" spacing="20">

			<ImageView fx:id="NewGoodsImageView" fitWidth="300"
				fitHeight="450" pickOnBounds="true" preserveRatio="true" />
			<Button fx:id="btnNewGoodsImage" text="이미지 파일 선택" />

		</VBox>

	</HBox>


</AnchorPane>

