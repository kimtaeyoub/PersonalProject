<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1">

	<VBox spacing="30" alignment="CENTER">
		<padding>
			<Insets top="10" bottom="10" left="10" right="10" />
		</padding>

		<HBox spacing="10" alignment="CENTER">
			<Label text="현재 판매등록수량 : " />
			<TextField fx:id="txtCurrentSalesCount" />
		</HBox>

		<HBox spacing="10" alignment="CENTER">
			<Label text="수정 할 판매 수량 : " />
			<TextField fx:id="txtSalesCountEdit" promptText="수정할 판매수량을 적어주세요" />
		</HBox>

		<HBox spacing="50" alignment="CENTER">
			<Button text="판매수량 수정" fx:id="btnSalesCountEditOK" />
			<Button text="취 소" fx:id="btnSalesCountEditExit" />
		</HBox>

	</VBox>

</AnchorPane>

